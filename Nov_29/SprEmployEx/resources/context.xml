        <property name="job" value="SWE" />
        <property name="company" value="Virtusa" />
        <property name="location" value="Bangalore" />
      </bean>
    </property>
    <property name="familyDetails">
      <bean class="com.java.traning.Family">
        <property name="city" value="Nagpur" />
        <property name="state" value="MH" />
      </bean>
    </property>
  </bean>

  <bean id="person3" class="com.java.traning.Person">
