<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

  <bean id="person1" class="com.java.traning.Person">
    <property name="id" value="1" />
    <property name="name" value="Gaurav"/>
    <property name="jobDetails">
      <bean class="com.java.traning.JobDetails">
        <property name="job" value="SWE"/>
        <property name="company" value="Virtusa"/>
        <property name="location" value="Bangalore"/>
      </bean>
    </property>
    <property name="familyDetails">
      <bean class="com.java.traning.Family">
        <property name="city" value="Pune"/>
        <property name="state" value="MH"/>
      </bean>
    </property>
  </bean>

  <bean id="person2" class="com.java.traning.Person">
    <property name="id" value="2" />
